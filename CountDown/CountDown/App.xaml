<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="CountDown.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:CountDown.Converters"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>

        <ResourceDictionary>
            <converter:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />
        </ResourceDictionary>

        <OnPlatform
            x:Key="FontAwesomeBrands"
            x:TypeArguments="x:String"
            Android="FontAwesome5BrandsRegular400.otf#Regular"
            iOS="FontAwesome5BrandsRegular400-Regular" />

        <OnPlatform
            x:Key="FontAwesomeSolid"
            x:TypeArguments="x:String"
            Android="FontAwesome5FreeSolid900.otf#Regular"
            iOS="FontAwesome5FreeSolid900-Solid" />

        <OnPlatform
            x:Key="FontAwesomeRegular"
            x:TypeArguments="x:String"
            Android="FontAwesome5FreeRegular400.otf#Regular"
            iOS="FontAwesome5FreeRegular400-Regular" />

    </Application.Resources>
</Application>